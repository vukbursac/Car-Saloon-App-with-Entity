                @Html.ValidationMessageFor(model => model.Automobile.ManufacturerId, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="hidden" name="automobile.SalonId" value="@Model.Salon.Id" />
        @*<div class="form-group">
                @Html.LabelFor(model => model.Automobile.SalonId, "SalonId", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("SalonId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Automobile.SalonId, "", new { @class = "text-danger" })
                </div>
            </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "List", new { id = Model.Salon.Id })
</div>

